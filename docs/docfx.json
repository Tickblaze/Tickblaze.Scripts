{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/Tickblaze.Scripts.Api.dll"
          ]
        }
      ],
      "dest": "api",
      "outputFormat": "apiPage",
      "basePath": "/Docs"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "my-template"
    ],
    "globalMetadata": {
      "_appName": "Tickblaze",
      "_appTitle": "Tickblaze",
      "_appLogoPath": "images/logo.png",
      "_enableSearch": true,
      "pdf": false
    }
  }
}